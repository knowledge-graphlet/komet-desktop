        <!-- Configure build timestamp -->
        <maven.build.timestamp.format>yyyy-MM-dd HH:mm:ss</maven.build.timestamp.format>
        <asm.version>9.9</asm.version>
        <ike-bom.version>0.1.0-SNAPSHOT</ike-bom.version>
        <!-- Default: skip signing. Enable with -Dgpg.sign=true -->
        <gpg.sign.skip>true</gpg.sign.skip>

        <compiler.args>--enable-preview</compiler.args>
        <surefire.args>--enable-preview</surefire.args>
        <failsafe.args>--enable-preview</failsafe.args>
        <javadoc.args>--enable-preview</javadoc.args>

        <!-- Default JPackage settings (overridden by OS profiles) -->
        <jpackage.type>app-image</jpackage.type> <!-- Valid default, or use 'unknown' -->
        <jpackage.icon>src/main/resources/icons/Komet.png</jpackage.icon>
        <jpackage.resourceDir>installer_resources/resourceDir_unix</jpackage.resourceDir>
        <jpackage.app.dest>target/dist/installer</jpackage.app.dest>
        <!-- JProfiler agent path (auto-detected by platform) -->
        <jprofiler.agent.path>/Applications/JProfiler.app/Contents/Resources/app/bin/macos/libjprofilerti.jnilib
        </jprofiler.agent.path>
        <skip.image.standard>true</skip.image.standard>
        <skip.image.profile>true</skip.image.profile>
        <skip.image.debug>true</skip.image.debug>
    </properties>

